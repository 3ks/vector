{
    "name": "Vector",
    "description": "Vector is a lightweight tool for building observability pipelines.",
    "repository": "https://github.com/timberio/vector",
    "logo": "https://vector.dev/press/vector-icon.png",
    "keywords": ["observability"],
    "buildpacks": [
        { "url": "https://github.com/timberio/vector-heroku-buildpack" }
